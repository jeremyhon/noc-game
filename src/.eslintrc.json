{
    "extends": "airbnb",
    "parser": "babel-eslint",
    "plugins": [
      "react",
      "jsx-a11y",
      "import"
    ],
    "env": {
      "browser": true,
      "node": true,
      "commonjs": true
    },
    "settings": {
      "import/resolver":{
        "webpack":{
          "config": "config/webpack.config.dev.js"
        }
      }
    },
    "rules": {
      "react/prefer-stateless-function": "warn",
      "semi": ["error", "never"],
      "quotes": ["warn", "single", {"allowTemplateLiterals": true,"avoidEscape": true}],
      "arrow-parens": ["error", "always"]
    }
}
